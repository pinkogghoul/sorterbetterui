<Window x:Class="LogSummaryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LOG SUMMARY - Ultimate Edition"
        Height="1000" Width="1600"
        WindowState="Maximized"
        Background="{StaticResource ColorBackground}"
        PreviewMouseWheel="Window_PreviewMouseWheel"
        FontFamily="{StaticResource AppFontFamily}">

    <Grid x:Name="MainGrid" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <ScaleTransform x:Name="ScaleTransform" ScaleX="1.0" ScaleY="1.0"/>
        </Grid.RenderTransform>

        <!-- Ambient Glow Background -->
        <Ellipse Width="800" Height="800" Fill="{StaticResource GlowGradient}"
                 Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-200,-200,0,0"/>
        <Ellipse Width="600" Height="600" Fill="{StaticResource GlowGradient}"
                 Opacity="0.08" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-100,-100"/>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SPECTACULAR COSMIC HEADER -->
        <Border Grid.Row="0" Background="{StaticResource CosmicGradient}" Padding="40,28">
            <Border.Effect>
                <DropShadowEffect Color="#a855f7" BlurRadius="40" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title Section with Premium Design -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Animated Icon Container -->
                    <Border Background="#ffffff25" CornerRadius="18" Width="54" Height="54" Margin="0,0,20,0"
                            BorderBrush="#ffffff40" BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect Color="#ffffff" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>
                        <TextBlock Text="âš¡" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel>
                        <TextBlock Text="LOG SUMMARY"
                                   FontSize="32"
                                   FontWeight="Black"
                                   Foreground="White"
                                   LetterSpacing="4">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="âœ¨ Ultimate Premium Analytics Dashboard âœ¨"
                                   FontSize="13"
                                   Foreground="#ffffff"
                                   Opacity="0.9"
                                   FontWeight="Medium"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Premium Stats Cards -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Active Stats Card -->
                    <Border Style="{StaticResource StatCard}" Margin="0,0,16,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#84cc16" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ACTIVE ACCOUNTS" FontSize="10" Foreground="#ffffff" Opacity="0.8"
                                       FontWeight="Bold" LetterSpacing="1"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Ellipse Width="12" Height="12" Margin="0,0,10,0">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#84cc16" Offset="0"/>
                                            <GradientStop Color="#22c55e" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#84cc16" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock x:Name="TotalActiveLabel"
                                           Text="0"
                                           FontSize="24"
                                           FontWeight="Black"
                                           Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Inactive Stats Card -->
                    <Border Style="{StaticResource StatCard}">
                        <Border.Effect>
                            <DropShadowEffect Color="#f97316" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="INACTIVE ACCOUNTS" FontSize="10" Foreground="#ffffff" Opacity="0.8"
                                       FontWeight="Bold" LetterSpacing="1"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Ellipse Width="12" Height="12" Margin="0,0,10,0">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#f97316" Offset="0"/>
                                            <GradientStop Color="#ef4444" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#f97316" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <TextBlock x:Name="TotalInactiveLabel"
                                           Text="0"
                                           FontSize="24"
                                           FontWeight="Black"
                                           Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Premium Control Section -->
        <Border Grid.Row="1" Padding="40,32" Background="Transparent">
            <StackPanel HorizontalAlignment="Center">
                <Button x:Name="SelectFolderButton"
                        Content="ðŸš€  SELECT FOLDERS AND START ANALYSIS"
                        Style="{StaticResource PremiumButton}"
                        Click="SelectFolderButton_Click"
                        RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

                <TextBlock x:Name="StatusLabel"
                           Text="Select folders containing log files to begin premium analytics"
                           FontSize="13"
                           Foreground="{StaticResource ColorTextSecondary}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"
                           FontWeight="Medium"
                           Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- ULTIMATE TABLE CARD -->
        <Border Grid.Row="2" Margin="40,0,40,40" CornerRadius="24">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="50" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a1a2e" Offset="0"/>
                    <GradientStop Color="#12121f" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <!-- Glassmorphism Overlay -->
                <Border Background="#ffffff05" CornerRadius="24"/>
                <Border BorderBrush="#ffffff25" BorderThickness="2" CornerRadius="24"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                    <StackPanel>
                        <!-- Ultra Premium Table Header -->
                        <Border Background="{StaticResource NeonGradient}"
                                CornerRadius="24,24,0,0"
                                Padding="28,20">
                            <Border.Effect>
                                <DropShadowEffect Color="#3b82f6" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="140"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="#" FontSize="12" FontWeight="Black"
                                           Foreground="White" HorizontalAlignment="Center" LetterSpacing="1"/>
                                <TextBlock Grid.Column="1" Text="COUNT" FontSize="12" FontWeight="Black"
                                           Foreground="White" HorizontalAlignment="Center" LetterSpacing="1"/>
                                <TextBlock Grid.Column="2" Text="CATEGORY / PRIORITY" FontSize="12" FontWeight="Black"
                                           Foreground="White" Margin="20,0,0,0" LetterSpacing="1"/>
                                <TextBlock Grid.Column="3" Text="ACTIVE" FontSize="12" FontWeight="Black"
                                           Foreground="White" HorizontalAlignment="Center" LetterSpacing="1"/>
                                <TextBlock Grid.Column="4" Text="INACTIVE" FontSize="12" FontWeight="Black"
                                           Foreground="White" HorizontalAlignment="Center" LetterSpacing="1"/>
                            </Grid>
                        </Border>

                        <!-- Premium Table Rows -->
                        <ItemsControl x:Name="TableItemsControl" ItemsSource="{Binding TableRows}" Padding="12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="RowBorder" Style="{StaticResource RowCard}" Margin="12,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="140"/>
                                                <ColumnDefinition Width="140"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Premium Index Badge -->
                                            <Border Grid.Column="0" Style="{StaticResource IndexBadge}">
                                                <TextBlock Text="{Binding Index}"
                                                           FontSize="14"
                                                           FontWeight="Black"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Count Badge with Glow -->
                                            <Border Grid.Column="1" Style="{StaticResource CountBadge}" HorizontalAlignment="Center">
                                                <TextBlock FontSize="14" FontWeight="Black" Foreground="White" LetterSpacing="1">
                                                    <Run Text="Ã—"/><Run Text="{Binding Count}"/>
                                                </TextBlock>
                                            </Border>

                                            <!-- Category with Premium Icon Container -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                                                <Border Background="#ffffff20" CornerRadius="10" Width="40" Height="40"
                                                        Margin="0,0,16,0" BorderBrush="#ffffff30" BorderThickness="1">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#ffffff" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <Image Source="{Binding Icon}" Width="28" Height="28"/>
                                                </Border>
                                                <TextBlock Text="{Binding Category}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource ColorTextPrimary}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Success Badge -->
                                            <Border Grid.Column="3" Style="{StaticResource SuccessBadge}" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Active}"
                                                           FontSize="15"
                                                           FontWeight="Black"
                                                           Foreground="White"
                                                           LetterSpacing="1"/>
                                            </Border>

                                            <!-- Warning Badge -->
                                            <Border Grid.Column="4" Style="{StaticResource WarningBadge}" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Inactive}"
                                                           FontSize="15"
                                                           FontWeight="Black"
                                                           Foreground="White"
                                                           LetterSpacing="1"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
