<Application x:Class="LogSummaryApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="ColorBackground" Color="#000000"/>
        <SolidColorBrush x:Key="ColorFrame" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="ColorHeaderBg" Color="#6941c6"/>
        <SolidColorBrush x:Key="ColorRowSeparator" Color="#2d2d44"/>
        <SolidColorBrush x:Key="ColorTextHeader" Color="#ffffff"/>
        <SolidColorBrush x:Key="ColorTextDefault" Color="#ffffff"/>
        <SolidColorBrush x:Key="ColorTextCount" Color="#ffd700"/>
        <SolidColorBrush x:Key="ColorTextActive" Color="#10b981"/>
        <SolidColorBrush x:Key="ColorTextInactive" Color="#ef4444"/>

        <!-- Font Family -->
        <FontFamily x:Key="AppFontFamily">Segoe UI, Roboto, sans-serif</FontFamily>
    </Application.Resources>
</Application>
