<Application x:Class="LogSummaryApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="ColorBackground" Color="#1c1c1c"/>
        <SolidColorBrush x:Key="ColorFrame" Color="#2a2a2a"/>
        <SolidColorBrush x:Key="ColorHeaderBg" Color="#283593"/>
        <SolidColorBrush x:Key="ColorRowSeparator" Color="#3a3a3a"/>
        <SolidColorBrush x:Key="ColorTextHeader" Color="#ffffff"/>
        <SolidColorBrush x:Key="ColorTextDefault" Color="#dcdcdc"/>
        <SolidColorBrush x:Key="ColorTextCount" Color="#f1c40f"/>
        <SolidColorBrush x:Key="ColorTextActive" Color="#2ecc71"/>
        <SolidColorBrush x:Key="ColorTextInactive" Color="#e74c3c"/>

        <!-- Font Family -->
        <FontFamily x:Key="AppFontFamily">Segoe UI, Roboto, sans-serif</FontFamily>
    </Application.Resources>
</Application>
